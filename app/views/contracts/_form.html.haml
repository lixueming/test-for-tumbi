= form_for @contract, :html => { :class => 'form-horizontal' } do |f|
	.control-group
		= f.label :name, :class => 'control-label'
		.controls
			= f.text_field :name, :class => 'text_field'
	.control-group
		= f.label :address, :class => 'control-label'
		.controls
			= f.text_field :address, :class => 'text_field'
	.control-group
		= f.label :contractendon, :class => 'control-label'
		.controls
			= f.date_select :contractendon, :class => 'date_select'
	.control-group
		= f.label :longitude, :class => 'control-label'
		.controls
			= f.text_field :longitude, :class => 'text_field'
	.control-group
		= f.label :latitude, :class => 'control-label'
		.controls
			= f.text_field :latitude, :class => 'text_field'
	.control-group
		= f.label :fences, :class => 'control-label'
		.controls
			= f.text_field :fences, :class => 'text_field'	
	= f.hidden_field :gmaps, :value=>1
	= f.hidden_field :user_id, :value=>current_user.id
	.form-actions
		= f.submit nil, :class => 'btn btn-primary'
		= link_to t('.cancel', :default => t("helpers.links.cancel")), contracts_path, :class => 'btn'
